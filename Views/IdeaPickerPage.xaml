<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IdeaPickerApp.Views.IdeaPickerPage">
    <ContentPage.Content>
        <StackLayout Padding="20,20">
            <Label Text="Add Idea" FontSize="Large" FontAttributes="Bold" Margin="0,10,0,10"/>
            <Border Stroke="gray" StrokeThickness="1">
                <Entry x:Name="txtIdea" IsTextPredictionEnabled="False" />
            </Border>
            
            
            <Button Text="Add Idea" Margin="0,70,0,0" Clicked="AddIdea_OnClicked"/>
            
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>